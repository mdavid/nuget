<self:DialogWithNoMinimizeAndMaximize x:Class="PackageExplorer.DownloadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:self="clr-namespace:PackageExplorer"
        Title="Downloading package" 
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Loaded="OnLoaded"
        MaxWidth="500"
        Closing="Window_Closing"
        MinWidth="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>        
        
        <TextBlock x:Name="StatusText" Text="Downloading..." TextWrapping="Wrap" />
        <ProgressBar Grid.Row="1" x:Name="Progress" Margin="0,10,0,10" Maximum="100" Minimum="0" Width="300" VerticalAlignment="Center" Height="30" />
        <Button x:Name="CancelButton" Grid.Row="2" HorizontalAlignment="Right" Content="_Cancel" IsCancel="False" Padding="10,2,10,2" Margin="5,5,0,5" Click="CancelButtonClicked" />
    </Grid>
</self:DialogWithNoMinimizeAndMaximize>